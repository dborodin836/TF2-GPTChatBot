{
  "type": "object",
  "required": [
    "commands"
  ],
  "properties": {
    "commands": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Command"
      }
    }
  },
  "definitions": {
    "Command": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "quick-query",
            "command-global",
            "command-private"
          ]
        },
        "provider": {
          "type": "string",
          "enum": [
            "open-ai",
            "text-generation-webui",
            "groq-cloud"
          ]
        },
        "model": {
          "type": "string"
        },
        "model_settings": {
          "type": "object"
        },
        "settings": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "prompt-file": {
              "type": "string"
            },
            "enable-soft-limit": {
              "type": "boolean"
            },
            "soft-limit-length": {
              "type": "integer"
            },
            "message-suffix": {
              "type": "string"
            },
            "greeting": {
              "type": "string"
            },
            "allow-prompt-overwrite": {
              "type": "boolean"
            },
            "allow-long": {
              "type": "boolean"
            },
            "enable-hard-limit": {
              "type": "boolean"
            },
            "hard-limit-length": {
              "type": "integer"
            }
          },
          "dependencies": {
            "enable-soft-limit": {
              "required": ["soft-limit-length"]
            },
            "enable-hard-limit": {
              "required": ["hard-limit-length"]
            }
          }
        },
        "traits": {
          "type": "array",
          "additionalItems": true,
          "items": {
            "anyOf": [
              {
                "type": "string",
                "enum": [
                  "openai-moderated",
                  "admin-only",
                  "disabled",
                  "deny-empty-prompt"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "empty-prompt-message-response": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "additionalProperties": false,
                "required": [
                  "empty-prompt-message-response"
                ]
              }
            ]
          }
        }
      },
      "if": {
        "properties": {
          "provider": {
            "const": "open-ai"
          }
        }
      },
      "then": {
        "required": [
          "model"
        ]
      },
      "required": [
        "name",
        "prefix",
        "provider",
        "type"
      ],
      "title": "Command"
    }
  }
}