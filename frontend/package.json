{
  "name": "tf2-gptchatbot",
  "author": "dborodin836",
  "version": "1.3.0",
  "description": "An AI-powered chatbot for Team Fortress 2 fans and players.",
  "private": true,
  "homepage": "./",
  "license": "GNU General Public License v3.0",
  "main": "public/electron.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/dborodin836/TF2-GPTChatBot.git"
  },
  "issues": {
    "url": "https://github.com/dborodin836/TF2-GPTChatBot/issues"
  },
  "scripts": {
    "dev": "concurrently -k -n \"ELCTR,SERVE\" -c \"blue,magenta\" \"npm run electron:dev\" \"npm run start\"",
    "demo": "concurrently -k -n \"ELCTR,SERVE\" -c \"blue,magenta\" \"npm run electron:demo\" \"npm run start\"",
    "start": "cross-env BROWSER=none vite",
    "electron:dev": "wait-on tcp:3000 && cross-env VITE_ENVIRONMENT=development electron .",
    "electron:demo": "wait-on tcp:3000 && cross-env VITE_ENVIRONMENT=demo electron .",
    "build": "cross-env VITE_APP_ELECTRON=true vite build",
    "pack": "npm run build && electron-builder",
    "test": "vite test",
    "eject": "vite eject"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@material-tailwind/html": "^2.2.2",
    "@material-tailwind/react": "2.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.3",
    "@types/react": "18.2.19",
    "@types/react-dom": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.6",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "5.4.3",
    "vite": "^5.2.8",
    "vite-tsconfig-paths": "^4.3.2",
    "wait-on": "^7.2.0",
    "web-vitals": "^3.5.2"
  },
  "build": {
    "appId": "com.tf2gptchatbot.app",
    "files": [
      "./build/**/*",
      "!dist/**/*",
      "!src/**/*",
      "!node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "../dist/tf2-gptcb",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "productName": "TF2-GPTChatBot",
    "icon": "./build/logo512.png",
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "win": {
      "target": [
        "zip"
      ]
    },
    "extends": null
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
