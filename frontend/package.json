{
  "name": "tf2-gptchatbot",
  "author": "dborodin836",
  "version": "1.3.0",
  "description": "An AI-powered chatbot for Team Fortress 2 fans and players.",
  "private": true,
  "homepage": "./",
  "license": "GNU General Public License v3.0",
  "main": "public/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dborodin836/TF2-GPTChatBot.git"
  },
  "issues": {
    "url": "https://github.com/dborodin836/TF2-GPTChatBot/issues"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@material-tailwind/react": "^2.1.9",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^3.5.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:no-browser": "cross-env BROWSER=none react-scripts start",
    "demo": "concurrently -k -n \"ELCTR,SERVE\" -c \"blue,magenta\" \"npm run electron:demo\" \"npm run start:no-browser\"",
    "electron": "cross-env REACT_APP_DEV=true REACT_APP_DEVTOOLS=true electron .",
    "electron:demo": "wait-on tcp:3000 && cross-env REACT_APP_DEV=true electron .",
    "electron:prod": "cross-env REACT_APP_DEV=false electron .",
    "build": "cross-env REACT_APP_ELECTRON=false react-scripts build",
    "build:electron": "cross-env REACT_APP_ELECTRON=true react-scripts build",
    "pack": "npm run build:electron && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.tf2gptchatbot.app",
    "files": [
      "./build/**/*",
      "!dist/**/*",
      "!src/**/*",
      "!node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "../dist/tf2-gptcb",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "productName": "TF2-GPTChatBot",
    "icon": "./build/logo512.png",
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "win": {
      "target": [
        "zip"
      ]
    },
    "extends": null
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  }
}
